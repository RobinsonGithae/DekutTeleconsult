<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConsultViaActivity">

    <TextView
        android:id="@+id/ConsultViaLabelTV"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="CONSULT VIA"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/btnConsultWithChat"
        android:text="CHAT"
        android:background="#5353FE"
        android:textSize="16sp"
        android:textColor="#FCF6F6"
        android:textStyle="bold|italic"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnConsultWithVideoCall"
        android:text="VIDEO CALL"
        android:background="#5353FE"
        android:textSize="16sp"
        android:textColor="#FCF6F6"
        android:textStyle="bold|italic"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

</LinearLayout>