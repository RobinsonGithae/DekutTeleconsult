<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listitmMedicineNameTV"
        android:text="MedicineName"
        android:textStyle="bold"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkBlue"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/medicineDosageTV"
    android:text="Dosage"
    android:background="@color/colorWhite"
    android:textColor="@color/colorDarkBlue"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DrugTypeTVLstItm"
        android:text="DrugType"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkBlue"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DrugIntakeDurationTVLstItm"
        android:text="DrugIntakeDuration"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkBlue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DosingUnitTVLstItm"
        android:text="DoseUnit"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkBlue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DrugInstructionTVLstItm"
        android:text="Drug Instructions"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkBlue"
        />


</LinearLayout>